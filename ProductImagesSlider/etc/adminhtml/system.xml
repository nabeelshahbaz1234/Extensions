<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="productImageSlider" translate="label" sortOrder="400">
            <label>Product Images Slider</label>
        </tab>
        <section id="productImages" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Product Images Slider</label>
            <tab>rltsquare_config</tab>
            <resource>RLTSquare_ProductImagesSlider::rltsquare_productimagesslider</resource>
            <group id="productImagesGroup" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Product Images Slider</label>
                <field id="isEnableDisable" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="imageSlider" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Images To Show In Slider</label>
                    <source_model>RLTSquare\ProductImagesSlider\Model\Config\Source\ImageSlider</source_model>
                    <depends>
                        <field id="isEnableDisable">1</field>
                    </depends>
                </field>
                <field id="imageBreakpoint1" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Images Slider Breakpoint 1</label>
                    <source_model>RLTSquare\ProductImagesSlider\Model\Config\Source\ImageSlider</source_model>
                    <comment>Number of images show in slider ( for screensize 1199px )</comment>
                    <depends>
                        <field id="isEnableDisable">1</field>
                    </depends>
                </field>
                <field id="imageBreakpoint2" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Images Slider Breakpoint 2</label>
                    <source_model>RLTSquare\ProductImagesSlider\Model\Config\Source\ImageSlider</source_model>
                    <comment>Number of images show in slider ( for screensize 991px )</comment>
                    <depends>
                        <field id="isEnableDisable">1</field>
                    </depends>
                </field>
                <field id="imageBreakpoint3" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Images Slider Breakpoint 3</label>
                    <source_model>RLTSquare\ProductImagesSlider\Model\Config\Source\Breakpoint</source_model>
                    <comment>Number of images show in slider ( for screensize 768px )</comment>
                    <depends>
                        <field id="isEnableDisable">1</field>
                    </depends>
                </field>
                <field id="imageBreakpoint4" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Images Slider Breakpoint 4</label>
                    <source_model>RLTSquare\ProductImagesSlider\Model\Config\Source\Breakpoint</source_model>
                    <comment>Number of images show in slider ( for screensize 360px )</comment>
                    <depends>
                        <field id="isEnableDisable">1</field>
                    </depends>
                </field>
                <field id="imagePopupSlider" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Images To Show In Popup Slider</label>
                    <source_model>RLTSquare\ProductImagesSlider\Model\Config\Source\Breakpoint</source_model>
                    <depends>
                        <field id="isEnableDisable">1</field>
                    </depends>
                </field>
                <field id="imagePopupBreakpoint1" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Popup Slider Breakpoint 1</label>
                    <source_model>RLTSquare\ProductImagesSlider\Model\Config\Source\Breakpoint</source_model>
                    <comment>Number of images show in slider ( for screensize 1199px )</comment>
                    <depends>
                        <field id="isEnableDisable">1</field>
                    </depends>
                </field>
                <field id="imagePopupBreakpoint2" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Popup Slider Breakpoint 2</label>
                    <source_model>RLTSquare\ProductImagesSlider\Model\Config\Source\Breakpoint</source_model>
                    <comment>Number of images show in slider ( for screensize 991px )</comment>
                    <depends>
                        <field id="isEnableDisable">1</field>
                    </depends>
                </field>
                <field id="imagePopupBreakpoint3" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Popup Slider Breakpoint 3</label>
                    <source_model>RLTSquare\ProductImagesSlider\Model\Config\Source\Breakpoint</source_model>
                    <comment>Number of images show in slider ( for screensize 768px )</comment>
                    <depends>
                        <field id="isEnableDisable">1</field>
                    </depends>
                </field>
                <field id="imagePopupBreakpoint4" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Popup Slider Breakpoint 4</label>
                    <source_model>RLTSquare\ProductImagesSlider\Model\Config\Source\Breakpoint</source_model>
                    <comment>Number of images show in slider ( for screensize 360px )</comment>
                    <depends>
                        <field id="isEnableDisable">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
